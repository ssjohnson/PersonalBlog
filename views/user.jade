extends ./layout.jade

block content
    .container(style="padding-bottom:100px;")
        if (posts)
            each post in posts 
                .container.row.col-lg-12
                    h3.text-left(style="display:inline") #{post.title}
                    a.pull-right.text-right(style="display:inline" href="/user/#{post.UserId}") #{post.author}
                    hr
                .container.row.col-lg-12(style="word-wrap:break-word; padding-bottom:50px;")
                    p !{post.text}
        else 
            p "No Posts To Show"